---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/LoginForm";
---

<Layout title="Login - 10xCards" showHeader={false}>
  <div class="container mx-auto px-4 py-8 max-w-md">
    <div class="space-y-6">
      <div class="text-center space-y-2">
        <h1 class="text-4xl font-bold">Welcome Back</h1>
        <p class="text-muted-foreground">Sign in to your account</p>
      </div>
      <LoginForm client:load />
      <div class="space-y-2 text-center text-sm">
        <a href="/forgot-password" class="text-primary hover:underline"> Forgot your password? </a>
        <div class="text-muted-foreground">
          Don't have an account?{" "}
          <a href="/register" class="text-primary hover:underline"> Sign up </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
