---
import Layout from "@/layouts/Layout.astro";
import { PasswordRecoveryForm } from "@/components/PasswordRecoveryForm";
---

<Layout title="Forgot Password - 10xCards" showHeader={false}>
  <div class="container mx-auto px-4 py-8 max-w-md">
    <div class="space-y-6">
      <div class="text-center space-y-2">
        <h1 class="text-4xl font-bold">Reset Password</h1>
        <p class="text-muted-foreground">Enter your email to receive a password reset link</p>
      </div>
      <PasswordRecoveryForm client:load />
      <div class="text-center text-sm text-muted-foreground">
        Remember your password?{" "}
        <a href="/login" class="text-primary hover:underline"> Sign in </a>
      </div>
    </div>
  </div>
</Layout>
